<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicInfo"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="59dp"
            android:fontFamily="@font/timesnewromanpsmt"
            android:textColor="#ff0000"
            android:text="Young Bihar Movement"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#8e8e8e"
            android:text="Registration"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="100dp"
            android:paddingLeft="15dp"
            android:hint="Your Name"
            android:background="@drawable/shape_text_input_box"
            />

        <EditText
            android:id="@+id/info_age"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:hint="Your Age"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:background="@drawable/shape_text_input_box"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#414141"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                >

                <TextView
                    android:id="@+id/info_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:textColor="#9e9e9e"
                    android:text="Male"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_text_input_box"
                    />

                <TextView
                    android:id="@+id/info_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#9e9e9e"
                    android:text="Female"
                    android:background="@drawable/shape_text_input_box"
                    />

                <TextView
                    android:id="@+id/info_other"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#9e9e9e"
                    android:text="Others"
                    android:background="@drawable/shape_text_input_box"
                    />



            </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you belong to Bihar"
                    android:textColor="#414141"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="16dp"
                >

                <TextView
                    android:id="@+id/bihar_belong_Y"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:textColor="#9e9e9e"
                    android:text="Y"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_text_input_box"
                    />

                <TextView
                    android:id="@+id/bihar_belong_N"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#9e9e9e"
                    android:text="N"
                    android:background="@drawable/shape_text_input_box"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="29dp"
        >

        <TextView
            android:id="@+id/basicinfo_district"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#61000000"
            android:text="Which district?"
            android:background="@drawable/shape_text_input_box"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_drop_down_black"

            />


        <Spinner
            android:id="@+id/basicinfo_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:background="@drawable/shape_text_input_box"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:id="@+id/liveinbihar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you also currently live in Bihar"
                    android:textColor="#414141"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="4dp"
                >

                <TextView
                    android:id="@+id/currentyes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:textColor="#9e9e9e"
                    android:text="Y"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_text_input_box"
                    />

                <TextView
                    android:id="@+id/currentno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#9e9e9e"
                    android:text="N"
                    android:background="@drawable/shape_text_input_box"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            >


            <Button
                android:id="@+id/nextAndUpload"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#FFF"
                android:text="Next"
                android:background="@drawable/shape_btn"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>