<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Youth Bihar Movement"
        android:fontFamily="@font/timesnewromanpsmt"
        android:textColor="#FF0000"
        android:layout_marginTop="156dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_description"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/timesnewromanpsmt"
        android:text="is a movement to make Bihar a world class place"
        android:textAlignment="center"
        android:textColor="#464646"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intro_short"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:text="to live"
        android:fontFamily="@font/timesnewromanpsboldmt"
        android:textAlignment="center"
        android:textColor="#464646"/>

    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:src="@drawable/img1"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"/>


</LinearLayout>