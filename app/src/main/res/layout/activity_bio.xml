<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="59dp"

            android:textColor="#ff0000"
            android:text="Young Bihar Movement"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#8e8e8e"
            android:text="Registration"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:layout_width="35.5dp"
            android:layout_height="46.7dp"
            android:src="@drawable/ic_profile"
            android:layout_marginTop="105.6dp"/>
        <TextView
            android:id="@+id/bio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="11.6dp"
            />
        <TextView
            android:id="@+id/text_age_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#646464"
            android:lineSpacingExtra="12sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#8e8e8e"
            android:lineSpacingExtra="3sp"
            android:gravity="center_horizontal"
            android:text="#SupportYBM"
            android:layout_marginTop="171dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:textColor="#a5a5a5"
                    android:lineSpacingExtra="3sp"
                    android:text="Amount"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >

                <EditText
                    android:hint="Amount"
                    android:paddingLeft="14dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:textColor="#000"
                    android:inputType="number"
                    android:layout_width="252dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_donate"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_btn"
            android:textColor="#fff"
            android:text="Donate"
            android:layout_margin="10dp"/>


    </LinearLayout>

</LinearLayout>